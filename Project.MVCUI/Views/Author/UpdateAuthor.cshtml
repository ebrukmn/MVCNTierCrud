@model Author
@{
    ViewBag.Title = "UpdateAuthor";
}

<h2>UpdateAuthor</h2>

@using (Html.BeginForm())
{

    @Html.HiddenFor(x => x.ID)
    <div>
        Enter New First Name
    </div>
    <div>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div>
        Enter New Last Name
    </div>
    <div>
        @Html.TextAreaFor(x => x.LastName, new { @class = "form-control" })
    </div>
    <div>
        Enter New Age
    </div>
    <div>
        @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success">Update Author</button>
    </div>
}